# Application
APP_ENV=development
PORT=8080
CLIENT_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://admin:secret@localhost:5432/kudoboard?sslmode=disable

# JWT Authentication
JWT_SECRET=your-super-secret-key-change-this-in-production
JWT_EXPIRES_IN=24  # hours

# Storage
STORAGE_TYPE=local  # local or s3
LOCAL_STORAGE_PATH=./uploads

# AWS S3 (only required if STORAGE_TYPE=s3)
S3_REGION=us-east-1
S3_BUCKET=your-bucket-name
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key

# Giphy API key
GIPHY_API_KEY=my-giphy-api-key

# Unsplash key
UNSPLASH_ACCESS_KEY=my-unspash-access-key
